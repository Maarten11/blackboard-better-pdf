{
    "manifest_version": 3,
    "name": "BlackBoardPDFOpener",
    "description": "Open PDF's in a seperate tab",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "hello.html",
        "default_title": "BB PDF Opener"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}