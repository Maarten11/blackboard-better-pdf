{
    "manifest_version": 3,
    "name": "BlackBoardPDFOpener",
    "description": "Open PDF's in a seperate tab",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "hello.html",
        "default_title": "BB PDF Opener"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://lms.uantwerpen.be/ultra/*",
                "https://developer.chrome.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}