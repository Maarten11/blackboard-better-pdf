{
    "manifest_version": 3,
    "name": "BlackBoardPDFOpener",
    "description": "Open PDF's in a seperate tab",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service-worker": "background.js"
    },
    "action": {
        "default_popup": "hello.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lms.uantwerpen.be/ultra/courses/*/outline/*",
                "https://developer.chrome.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "content-script.js"
            ]
        }
    ]
}