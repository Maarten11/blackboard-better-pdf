{
    "manifest_version": 3,
    "name": "BlackBoardPDFOpener",
    "description": "Open PDF's in a seperate tab",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*",
                "https://lms.uantwerpen.be/ultra/*"
            ]
        }
    ]
}