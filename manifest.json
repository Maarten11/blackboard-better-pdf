{
    "manifest_version": 3,
    "name": "BlackBoardPDFOpener",
    "description": "Open PDF's in a seperate tab",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://developer.chrome.com/docs/*",
                "https://lms.uantwerpen.be/ultra/course*"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {},
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}